<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Button style -->
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:padding">@dimen/button_padding</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Heading style -->
    <style name="HeadingStyle" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">@dimen/heading_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/heading_text_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Election list style -->
    <style name="ListStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginLeft">@dimen/list_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/list_text_size</item>
        <item name="android:textColor">@color/gray50</item>
        <item name="android:padding">@dimen/list_padding</item>
        <item name="android:font">@font/roboto</item>
    </style>

    <style name="SubHeadingStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginLeft">@dimen/list_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sub_heading_text_size</item>
        <item name="android:textColor">@color/gray50</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:padding">@dimen/list_padding</item>
    </style>

    <style name="ClickTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginLeft">@dimen/list_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sub_heading_text_size</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:padding">@dimen/list_padding</item>
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:linksClickable">true</item>
        <item name="android:autoLink">web</item>
        <item name="android:clickable">true</item>
    </style>


</resources>
