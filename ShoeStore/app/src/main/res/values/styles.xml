<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="TextView">
        <item name="android:layout_marginTop">@dimen/top_margin</item>
        <item name="android:layout_marginBottom">@dimen/top_margin</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/textViewSize</item>
    </style>
    <style name="EditBox">
        <item name="android:layout_marginLeft">@dimen/layout_margin</item>
        <item name="android:layout_marginRight">@dimen/layout_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/editTextSize</item>
    </style>
    <style name="small_button">
        <item name="android:layout_width">@dimen/fill_space</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="itemTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/itemTextView</item>
        <item name="android:drawablePadding">@dimen/drawablePadding</item>
        <item name="android:singleLine">false</item>
    </style>
    <style name="descriptionTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/descriptionTextSize</item>
        <item name="android:layout_margin">@dimen/layout_margin</item>
        <item name="android:layout_marginTop">@dimen/top_margin</item>
    </style>
</resources>
